@model TodoNet.Models.Todo

@{
    ViewBag.Title = "Create todo";
}

<div class="row">
    <div class="col-md-12">

        <form action="@this.Url.Action("Create", "Todo")" method="POST">
            <div class="form-group has-danger">
                <label for="title">Title</label>
                <input type="text" id="title" name="Title" class="form-control" value="@Request.Params["Title"]">
                @Html.ValidationMessageFor(m => m.Title, "", new {@class = "text-danger"})
            </div>

            <div class="form-group">
                <label for="content">Content</label>
                <textarea  id="content" name="Content" class="form-control" rows="10">@Request.Params["Content"]</textarea>
                @Html.ValidationMessageFor(m => m.Content, "", new {@class = "text-danger"})
            </div>

            <button type="submit" class="btn btn-primary">Publish</button>
        </form>


    </div>
</div>